<div class="country-section" style="text-align: center; margin-top: 2rem;">
  <h2>üåç Explore West African Countries</h2>
  
  <input type="text" id="search" placeholder="Search for a country..." style="width: 250px; padding: 8px; margin-bottom: 1rem;">
  
  <div class="country-grid" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 1rem;">
    &lt;% countries.forEach(country =&gt; { %&gt;
      <div class="country-card" style="border: 1px solid #ccc; border-radius: 8px; padding: 1rem; width: 250px; background-color: #f9f9f9;">
        <h3 class="country-name">&lt;%= country.name %&gt;</h3>
        <p><strong>Capital:</strong> &lt;%= country.capital %&gt;</p>
        <p><strong>Population:</strong> &lt;%= country.population.toLocaleString() %&gt;</p>
        <p><strong>Language:</strong> &lt;%= country.official_language %&gt;</p>
        <p><strong>Currency:</strong> &lt;%= country.currency %&gt;</p>
        <img src="&lt;%= country.national_flag_url %&gt;" alt="Flag of &lt;%= country.name %&gt;" style="max-width: 100px; margin-top: 0.5rem;">
      </div>
    &lt;% }) %&gt;
  </div>
</div>

<script>
  document.getElementById("search").addEventListener("input", function () {
    const query = this.value.toLowerCase();
    document.querySelectorAll(".country-card").forEach(card => {
      const name = card.querySelector(".country-name").textContent.toLowerCase();
      card.style.display = name.includes(query) ? "block" : "none";
    });
  });
</script>